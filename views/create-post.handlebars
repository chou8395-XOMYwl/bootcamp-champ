    <div class=" mb-3">
      <label for="post-title"><b>Title:</b></label>
      <input class="input" type="text" id="post-title" name="post-title" placeholder="insert blog title here" />
    </div>
    <div class="">
      <label for="post-content"><b>Content:</b></label>
      <input rows="4" class="textarea" id="post-content" name="post-content" placeholder="insert blog content here" />
    </div>
    <button type="submit" class="btn btn-primary mt-4 post">create post <i class="bi bi-trophy"></i></button>
  </form>
</section>

